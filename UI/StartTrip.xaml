<Window x:Class="PL.StartTrip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Start a journey" Height="200" Width="300" Background="#FFF1FBEE" FontSize="14" Margin="0,-2,0,0" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid x:Name="inpt_km" Margin="15">
        <TextBox x:Name="input_val" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="23" Margin="73,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" KeyDown="Add_km"/>
        <Label Content="Enter driving distance" HorizontalAlignment="Left" Margin="66,27,0,0" VerticalAlignment="Top"/>
        <Label Content="Enter to confirm" HorizontalAlignment="Left" Margin="79,58,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>
