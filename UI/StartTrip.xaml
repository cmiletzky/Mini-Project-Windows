<Window x:Class="PL.StartTrip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Start a journey" Height="200" Width="300" Background="#FFF1FBEE" FontSize="14" Margin="0,-2,0,0" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid x:Name="inpt_km" Margin="15">
        <TextBox x:Name="input_val" PreviewTextInput="NumberValidationTextBox" TextWrapping="Wrap"  Width="120" KeyDown="Add_km" Margin="76,81,68.667,28.667"/>
        <TextBlock  Text="Enter driving distance" VerticalAlignment="Center" Margin="56,13,-6.333,103.667" Height="26" />
        <TextBlock  Text="Press enter to confirm" Margin="56,44,9.667,73.667" VerticalAlignment="Center" Height="25"/>


    </Grid>
</Window>
