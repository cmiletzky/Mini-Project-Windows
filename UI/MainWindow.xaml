<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Main" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="main_contect" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TabControl Grid.Column="0">
                <TabItem Header="Buss">
                    <ListBox  x:FieldModifier="public" x:Name="bus_list" VerticalAlignment="Stretch"   Background="Honeydew"  BorderThickness="3"  >

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                <TextBlock x:Name="bus_id" Text="{Binding Id}"></TextBlock>
                                    <Button  Click="Start_driving" Padding="5" Margin="100,7,7,7" Width="100" Content="Start driving" IsEnabled="true" Background="#FFE0F7BA" BorderBrush="#FF268651" Foreground="#FF268651" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    <Button x:Name="refule"   Padding="5" Margin="210,7,7,7" Width="100" Content="refueling" IsEnabled="True" Click="Refueling" BorderBrush="#FF268651" Foreground="#FF268651" Background="#FFE0F7BA" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>

                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
                <TabItem Header="משהו" >
                    <ListBox   x:FieldModifier="public" x:Name="line_list" VerticalAlignment="Stretch"   Background="Honeydew"  BorderThickness="3"  >

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock x:Name="i_d" Text="{Binding Id}"  VerticalAlignment="Stretch" Background="{x:Null}" Foreground="#FF268651" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,7" />

                            </DataTemplate>

                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
                <TabItem Header="משהו">
                    <ListBox  x:FieldModifier="public" x:Name="stops_list" VerticalAlignment="Stretch"   Background="Honeydew"  BorderThickness="3" >

                        <ListBox.ItemTemplate>
                            <DataTemplate>

                            </DataTemplate>

                        </ListBox.ItemTemplate>
                    </ListBox>

                </TabItem>
            </TabControl>
           
           
        
        </Grid>
        <Menu Height="30"  DockPanel.Dock="Top" VerticalAlignment="Top">
            <MenuItem Header="registration" Click="MenuItem_Click"/>
            <MenuItem Header="Login" Click="MenuItem_Click"/>
            <MenuItem Header="Contact Us">
                <MenuItem Header="Sending an email"/>
                <MenuItem Header="Sending WhatsApp"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
