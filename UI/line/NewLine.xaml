<Window x:Class="PL.line.NewLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.line"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="NewLine" Height="300" Width="400">
    <Border BorderBrush="DarkGreen" BorderThickness="2">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="0,30">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal"  Margin="0,20,0,0">
                <TextBox x:Name="line_num" Width="200" FontSize="20"/>
                <TextBlock Text="מספר הקו" FontSize="18" Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,20,0,0">
                <ComboBox x:Name="area" Width="200" FontSize="20"/>
                <TextBlock Text="בחר איזור" FontSize="18" Padding="10,0,0,0"/>
            </StackPanel>
            <Button x:Name="con" Content="ביטול" Width="150" Margin="0,20,0,0" Click="con_Click"/>
            <Button x:Name="save" Content="שמירה" Width="150" Margin="0,20,0,0" Click="save_Click"/>
        </StackPanel>
    </Grid>
    </Border>
</Window>
